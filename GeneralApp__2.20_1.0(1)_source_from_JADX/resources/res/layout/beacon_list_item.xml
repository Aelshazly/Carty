<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="100">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MAJOR:" android:layout_marginStart="5dp"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/blue_dark" android:id="@+id/majorValue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MINOR:" android:layout_marginStart="5dp"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/blue_dark" android:id="@+id/minorValue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="RSSI:" android:layout_marginStart="10dp"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/blue_dark" android:id="@+id/rssiValue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Floor:" android:layout_marginStart="10dp"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/blue_dark" android:id="@+id/detail" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="#000" android:layout_width="match_parent" android:layout_height="1dp"/>
</LinearLayout>
